{% comment %}
  This is used to create CSS custom variables with Liquid references
  The file variables.scss is referring these CSS custom variables as Sass variables
  to use throughout the stylesheet
{% endcomment %}
{% style %}
  :root {
    {% if settings.assets_host == 'cdn' %}
      --gilroy-extrabold-webfont-woff: url({{ "gilroy-extrabold-webfont.woff2" | asset_url }})
      --gilroy-extrabold-webfont-woff2: url({{ "gilroy-extrabold-webfont.woff2" | asset_url }})
    {% else %}
      --gilroy-extrabold-webfont-woff: url("https://localhost:8383/assets/gilroy-extrabold-webfont.woff")
      --gilroy-extrabold-webfont-woff2: url("https://localhost:8383/assets/gilroy-extrabold-webfont.woff2")
  }
{% endstyle %}
