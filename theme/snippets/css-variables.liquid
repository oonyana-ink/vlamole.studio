{% comment %}
  This is used to create CSS custom variables with Liquid references
  The file variables.scss is referring these CSS custom variables as Sass variables
  to use throughout the stylesheet
{% endcomment %}
{% style %}
  :root {
    {% if settings.assets_host == 'cdn' %}
      --gilroy-extrabold-webfont-woff: url({{ "gilroy-extrabold-webfont.woff2" | asset_url }})
      --gilroy-extrabold-webfont-woff2: url({{ "gilroy-extrabold-webfont.woff2" | asset_url }})
    {% else %}
      --gilroy-extrabold-webfont-woff: url("/assets/gilroy-extrabold-webfont.woff")
      --gilroy-extrabold-webfont-woff2: url("/assets/gilroy-extrabold-webfont.woff2")
    {% endif %}
  }

  @font-face {
      font-family: 'Gilroy';
      font-style: normal;
      font-weight: 800;
      src: url('{{ "gilroy-extrabold-webfont.woff2" | asset_url }}') format('woff2'),
          url('{{ "gilroy-extrabold-webfont.woff" | asset_url }}') format('woff');
  }
{% endstyle %}
